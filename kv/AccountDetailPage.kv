#: import utils kivy.utils

<AccountDetailPage>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("FFFFFF")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:1
            pos_hint:{"top": 1,"right":1}
            size_hint:1,.08
            Button:
                size_hint: 1, 1
                text: "MY ACCOUNT"
                on_release:
                    print(" MY ACCOUNT ")
        GridLayout:
            rows:2
            pos_hint:{"top": .925,"right":1}
            size_hint:1,.5
            ImageButton:
                size_hint: 1, 1
                source: "pics/EM.jpeg"
                on_release:
                    print("OPENS SELLER's IMAGE")
            Button:
                size_hint: 1, .2
                text: "Edit Account"
                on_release:
                    app.change_screen("EditAccountPage")

        GridLayout:

            cols: 2
            pos_hint: {"top": .35, "right": .8}
            size_hint: .6, .06

            Label:
                id: accountDetail
                name: "accountDetail"
                color: 0, 0, 0, 1
                size_hint: 0.5, 1
                font_size: '18sp'
                size_hint: 1, .6
                text: ""
        GridLayout:
            rows:1
            pos_hint:{"top": .2,"right":.72}
            size_hint:.9,.1
            ImageButton:
                source:"pics/logouticon.png"
                on_release:
                    app.AccountLogout()
        GridLayout:
            canvas:
                Color:
                    rgb: 2.55,2.55,2.55
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 3
            pos_hint: {"top": .08, "left": 1.4}
            size_hint: 1, .08

            GridLayout:
                cols: 3
                ImageButton:
                    source: "pics/Home2.png"
                    on_release:
                        app.DefaultProductListOnHomeScreen()
                ImageButton:
                    source: "pics/Havehelp6.png"
                    on_release:
                        app.onClickAccount("HaveHelp")
                ImageButton:
                    source: "pics/myaccount3.jpeg"
                    on_release:
                        app.onClickAccount("AccountDetailPage")