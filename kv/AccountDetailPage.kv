#: import utils kivy.utils

<AccountDetailPage>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("CAAFAA")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows:2
            pos_hint:{"top": 1,"right":1}
            size_hint:1,.4
            ImageButton:
                size_hint: 1, 1
                source: "pics/EM.jpeg"
                on_release:
                    print("OPENS SELLER's IMAGE")
            Button:
                size_hint: 1, .2
                text: "Edit Account"
                on_release:
                    app.change_screen("EditAccountPage")
        GridLayout:

            cols: 2
            pos_hint: {"top": .5, "right": .8}
            size_hint: .6, .06

            Label:
                id: accountDetail
                name: "accountDetail"
                color: 0, 0, 0, 1
                size_hint: 0.5, 1
                font_size: '18sp'
                size_hint: 1, .6
                text: ""
        GridLayout:
            rows:1
            pos_hint:{"top": .3,"right":.72}
            size_hint:1,.1
            ImageButton:
                source:"pics/LO.jpeg"
                on_release:
                    app.AccountLogout()
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("2097F3")
                Rectangle:
                    size: self.size
                    pos: self.pos
            cols: 3
            pos_hint: {"top": .10, "left": 1.4}
            size_hint: 1, .1

            GridLayout:
                cols: 3
                Button:
                    text: "Home"
                    on_release:
                        app.DefaultProductListOnHomeScreen()
                Button:
                    text: "Have Help"
                    on_release:
                        app.onClickAccount("HaveHelp")
                Button:
                    text: "Account"
                    on_release:
                        app.onClickAccount("AccountDetailPage")